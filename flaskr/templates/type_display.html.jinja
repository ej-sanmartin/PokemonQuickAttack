{# TODO: Feature request, make this a searchable dropdown of types. #}
<form action="{{ url_for('get_type') }}" method="GET">
    <input
        type="text"
        name="name"
        placeholder="{{ data.type|default('Search for Type') }}"
        required
        minlength="1"
        pattern="[A-Za-z]+"
        title="Please enter a valid PokÃ©mon type"
    />
    <button type="submit">Search</button>
</form>

<div class="type-data-container">
    {% if data.error %}
        <p class="error-message">Type not found.</p>
    {% elif data %}
        <h2>Type: {{ data.type|title }}</h2>
        {% include 'damage_relationship_table.html.jinja' %}
    {% endif %}
</div>